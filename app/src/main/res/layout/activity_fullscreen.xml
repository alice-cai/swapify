<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".MainActivity"
    android:id="@+id/main_layout">

    <ImageView
        android:id="@+id/shopify_logo"
        android:layout_width="300dip"
        android:layout_height="fill_parent"
        android:src="@drawable/swapify_header"
        android:layout_gravity="center"
        android:layout_marginBottom="35dp"
        />

    <ProgressBar
        android:id="@+id/indeterminateBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_anchor="@+id/main_layout"
            app:layout_anchorGravity="top|start"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/swapify_header"
                android:src="@drawable/swapify_header"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:layout_gravity="fill_horizontal"
                android:cropToPadding="true"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                />

            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/card_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="4"
                android:rowCount="5"
                android:orientation="vertical"
                android:layout_below="@+id/swapify_header"
                android:layout_centerHorizontal="true"
                tools:context=".GridLayoutActivity">

                <ImageView
                    android:id="@+id/image_0_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_0_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_0_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_0_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_1_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_2_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_2_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_3_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_3_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_4_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_4_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_4_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

                <ImageView
                    android:id="@+id/image_4_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/image_border"
                    android:cropToPadding="true"
                    android:layout_margin="7dp"
                    android:padding="2dp"
                    />

            </GridLayout>
            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/footer_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="2"
                android:rowCount="1"
                android:orientation="vertical"
                android:layout_below="@+id/card_grid"
                android:layout_centerHorizontal="true"
                tools:context=".GridLayoutActivity">

                <TextView
                    android:id="@+id/match_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    />

                <Button
                    android:id="@+id/reshuffle_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reshuffle_button"
                    />

            </GridLayout>
        </RelativeLayout>
</FrameLayout>